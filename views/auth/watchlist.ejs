<%- include('../partials/head') %>

<body>
    <div id="wrapper">
        <%- include('../partials/sidebar') %>
        <div id="content-wrapper" class="d-flex-column">
            <div id="content">
                <%- include('../partials/navbar') %>

                <div class="container-fluid">           
                        <div class="d-sm-flex align-items-center justify-content-between mb-3">
                        <h1 class="h5 mb-0 text-gray-900">Watchlist</h1>
                        </div>                      
                        <div class="row">
                            <% if (typeof message != "undefined") { %>
                                <div class="alert alert-<%= message.class %>">
                                    <%= message.text %>
                                </div>
                            <% } %>

                            <% if (movies.length > 0) { %>
                                <% movies.forEach(movie => { %>
                                    <div class="col-xl-3 col-md-6 mb-4">
                                        <div class="card m-card shadow border-0">
                                        <a href="/movies/<%= movie.url %>">
                                        <div class="m-card-cover">
                                        <img src="/static/img/<%= movie.image %>" class="card-img-top" alt="...">
                                        </div>
                                        <div class="card-body p-3">
                                        <h5 class="card-title text-gray-900 mb-1"><%= movie.title %></h5>
                                        <p class="card-text"><small class="text-muted"><% movie.language %></small> <small class="text-danger"><i class="fas fa-calendar-alt fa-sm text-gray-400"></i> <%= movie.date %></small> </p>
                                        </div>
                                        <div class="card-body pl-2 pr-2 pb-2 pt-0">
                                            <a href="/watchlist/remove/<%= movie.id %>"><button class="btn btn-danger btn-block btn-sm"><i class="fas fa-trash"></i> Remove</button></a>
                                        </div>
                                        </a>
                                        </div>
                                        </div>
                                <% }) %>
                            <% } %>
                        </div>
                    
                    
                </div>
            </div>
        </div>
    </div>
</body>