<!DOCTYPE html>
<%- include('../partials/head') %>
<style>
    .osahan-slider {
        position: relative;
        width: 100%;
    }

    .osahan-slider-item {
        width: 100%;
        padding: 0 10px;
    }

    .osahan-slider-item img {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .slick-prev, .slick-next {
        font-size: 30px;
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border-radius: 50%;
    }

    .slick-prev {
        left: 10px;
    }

    .slick-next {
        right: 10px;
    }
</style>
<body id="page-top">

    <div id="wrapper">
    
    <%- include('../partials/sidebar') %>
    
    
    <div id="content-wrapper" class="d-flex flex-column">
    
    <div id="content">
    
    <%- include('../partials/navbar') %>
    
    
    <div class="container-fluid">
        <%- include('../partials/slider',) %>
    </div>
    
    <div class="d-sm-flex align-items-center justify-content-between mt-4 mb-3">
    <h1 class="h5 mb-0 text-gray-900">Movies</h1>
    <a href="/movies" class="d-none d-sm-inline-block text-xs">View All <i class="fas fa-eye fa-sm"></i></a>
    </div>
    
    <div class="row">
        <% movies.forEach(movie => { %>
            <%- include('../partials/card', movie) %>
        <% }) %>
    </div>
    </div>
    
    </div>
    
    
    <footer class="sticky-footer bg-white">
    <div class="container my-auto">
    <div class="copyright text-center my-auto">
    <span>Copyright © Bookishow 2019 | Made with <i class="fas fa-heart fa-fw text-danger"></i> by <a target="_blank" href="#">Askbootstrap</a></span>
    </div>
    </div>
    </footer>
    
    </div>
</div>
    
    
    <a class="scroll-to-top rounded" href="#page-top" style="display: inline;">
    <i class="fas fa-angle-up"></i>
    </a>
    
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
    <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">×</span>
    </button>
    </div>
    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
    <div class="modal-footer">
    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
    <a class="btn btn-primary" href="/auth/logout">Logout</a>
    </div>
    </div>
    </div>
    </div>
    
    
    
    
    </body>     
</html>
