<%- include('../partials/head') %>

<body>
    <div id="wrapper">
        <%- include('../partials/sidebar') %>
        <div id="content-wrapper" class="d-flex-column">
            <div id="content">
                <%- include('../partials/navbar') %>

                <div class="container-fluid">
                    <div class="d-sm-flex align-items-center justify-content-between mt-4 mb-3">
                        <h1 class="h5 mb-0 text-gray-900">Popular People</h1>
                        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Reset Filters <i class="fas fa-times fa-sm text-white-50"></i></a>
                    </div>

                    <div class="row">
                        <div class="col-xl-12 col-lg-12">
                        <div class="row">
                        <% peoples.forEach(people => { %>
                            <div class="col-xl-4 col-md-6 mb-4">
                                <div class="card p-card shadow border-0">
                                <a href="/people/<%= people.url %>">
                                <div class="row no-gutters">
                                <div class="col-md-4">
                                <img src="/static/img/<%= people.image %>" class="card-img" alt="...">
                                </div>
                                <div class="col-md-8">
                                <div class="card-body">
                                <h5 class="card-title text-gray-900"><%= people.name %></h5>
                                <p class="card-text"><%= people.biography %></p>
                                <p class="card-text"><small><span class="text-muted pr-2"><i class="fas fa-film fa-sm ml-1"></i> <%= people.duty_types %></span></small></p>
                                </div>
                                </div>
                                </div>
                                </a>
                                </div>
                                </div>
                        <% }) %>
                        </div>
                        </div>
                    </div>

                    <nav aria-label="...">
                        <ul class="pagination justify-content-center">
                          <li class="page-item    ">
                            <a class="page-link" href="?page=0">İlk sayfa</a>
                          </li>
                          <% for( let i = 0; i < totalPages; i++ ) { %>
                          <li class="page-item" aria-current="page">
                            <a class="page-link <%= (i == currentPage) ? "active" : "" %>" href="?page=<%= i %>"><%= i + 1 %></a>
                          </li>
                          <% } %>
                          <li class="page-item">
                            <a class="page-link" href="?page=<%= totalPages - 1 %>">Son sayfa</a>
                          </li>
                        </ul>
                    </nav>
                               
                </div>
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                    <span>Copyright © Bookishow 2019 | Made with <i class="fas fa-heart fa-fw text-danger"></i> by <a target="_blank" href="#">Askbootstrap</a></span>
                    </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
</body>